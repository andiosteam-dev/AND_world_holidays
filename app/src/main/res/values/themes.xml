<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WorldHolidays" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.SplashStyle" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/blue_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">400</item>
        <item name="postSplashScreenTheme">@style/Theme.WorldHolidays</item>
    </style>
</resources>